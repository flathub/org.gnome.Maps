{
    "id": "org.gnome.Maps",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-maps",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--metadata=X-DConf=migrate-path=/org/gnome/maps/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "geocode-glib",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "--libdir=/app/lib",
                "-Denable-gtk-doc=false",
                "-Dsoup2=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/geocode-glib/3.26/geocode-glib-3.26.4.tar.xz",
                    "sha256": "2d9a6826d158470449a173871221596da0f83ebdcff98b90c7049089056a37aa",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "geocode-glib"
                    }
                }
            ]
        },
        {
            "name": "libgweather",
            "config-opts": [
                "-Denable_vala=false",
                "-Dgtk_doc=false",
                "-Dsoup2=false"
            ],
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgweather/4.4/libgweather-4.4.4.tar.xz",
                    "sha256": "7017677753cdf7d1fdc355e4bfcdb1eba8369793a8df24d241427a939cbf4283",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libgweather",
                        "versions": {
                            "<": "40.0",
                            ">=": "4.0.0"
                        }
                    }
                }
            ]
        },
        {
            "name": "librest",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dexamples=false",
                "-Dsoup2=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/rest/0.9/rest-0.9.1.tar.xz",
                    "sha256": "9266a5c10ece383e193dfb7ffb07b509cc1f51521ab8dad76af96ed14212c2e3",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "rest",
                        "stable-only": false
                    }
                }
            ]
        },
        {
            "name": "protobuf-c",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-protoc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/protobuf-c/protobuf-c/releases/download/v1.5.0/protobuf-c-1.5.0.tar.gz",
                    "sha256": "7b404c63361ed35b3667aec75cc37b54298d56dd2bcf369de3373212cc06fd98",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/protobuf-c/protobuf-c/releases/latest",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"protobuf-c-\" + $version + \".tar.gz\") | .browser_download_url"
                    }
                }
            ]
        },
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddocs=false",
                "-Dvapi=false",
                "-Dbackend-gtk3=disabled",
                "-Dbackend-gtk4=enabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/flatpak/libportal/releases/download/0.9.0/libportal-0.9.0.tar.xz",
                    "sha256": "113910f06f39387328805397053d20c7acafb7388d8e6cd5e06e05efb9690735",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/flatpak/libportal/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"libportal-\" + $version + \".tar.xz\") | .browser_download_url"
                    }
                }
            ]
        },
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddemos=false",
                "-Dgtk_doc=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libshumate/1.4/libshumate-1.4.beta.tar.xz",
                    "sha256": "2535feddc17975c063859c52fc096ee7249cee0344e635b087bbe47166ef603b",
                    "x-checker-data": {
                        "type": "gnome",
                        "stable-only": false,
                        "name": "libshumate"
                    }
                }
            ]
        },
        {
            "name": "gnome-maps",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-maps/47/gnome-maps-47.4.tar.xz",
                    "sha256": "18c5e270fb522cfd3c003ec01093e065eb2f2b8d1b2780dfc279e0bf77735e0b",
                    "x-checker-data": {
                        "type": "gnome",
                        "is-important": true,
                        "name": "gnome-maps"
                    }
                }
            ]
        }
    ]
}
